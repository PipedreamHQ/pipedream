{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "outDir": "dist/server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules"
  ]
}
