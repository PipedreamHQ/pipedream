{
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ES6",
      "lib": ["ES6"],
      "declaration": true,
      "outDir": "dist/server",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "types": ["node", "jest", "jest-fetch-mock"]
    },
    "include": [
      "src/server/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
