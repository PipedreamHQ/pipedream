{
  "include": [
    "${configDir}/app",
    "${configDir}/actions",
    "${configDir}/sources",
    "${configDir}/common"
  ],
  "exclude": [
    "${configDir}/dist"
  ],
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "listEmittedFiles": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "${configDir}/dist"
  }
}
