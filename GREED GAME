int game::phase1()
{
                int p=0;
                game player[i];
                int lottery1a[3]={5,5,5};
                int lottery1b[3]={3,3,3};
                int lottery1c[3]={1,1,1};
                int lottery2a[2]={ 5,5};
                int lottery2b[2]={ 3,3};
                int lottery2c[2]={ 1,1};
                int lottery3a[1]={2};
                int choice;
                string choice1;
            player1:
            cout<<"PLAYER "<<p+1<<", Press 1 to take your turn:";
            cin>>choice;
            if(choice ==1)
            {
            player[p].gamethrow1();

                    if(a==lottery1a or a==lottery1b or a==lottery1c)
                    {   
                        cout<<"Do you want to throw again(y/n):";
                        cin>>choice1;
                        if(choice1=="y" or choice1=="Y")
                        {
                        player[p].gamethrow2();
                         


                                if(a==lottery2a or a==lottery2b or a==lottery2c)
                                {
                                    cout<<"Do you want to throw again(y/n):";
                                    cin>>choice1;
                                    if(choice1=="y" or choice1=="Y")
                                    {
                                    player[p].gamethrow3();
                                    }
                                    else
                                    {
                                        p++;
                                    }
                                }

                        }
                        
                    }

                                else
                                {
                                    p++;
                                }
            
            }
            else

            {
                cout<<"INVALID TRANSITION";
            }

}
 




