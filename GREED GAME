                {
                   
                    a[i]=(rand()%(6-1)+1);    //rand()% (upper-lower)+1 to generate numbers between 1 to 6

                }

                for(i=0;i<3;i++)
                {

                    cout<<a[i]<<" "<<endl;
                
                }


                score1=0;   for(i=0;i<3;i++)
                                {
                                    score1+=a[i];
                                }
                                cout<<"SCORE IS:"<<score1<<endl;
           // }

            //return score1;

}


