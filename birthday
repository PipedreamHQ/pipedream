#include<math.h>
#include<stdlib.h>
#define max 10^5
void main()
{
    int count=0,num,arr[max],i,m=0;
    printf("enter the number of candles\n");
    scanf("%d",&num);
    if(!(1<=num && num<=pow(10,5)))
    {
        printf("constraints dont work\n");
        exit(0);
    }
        printf("enter the size of each candles\n");
        for(i=0;i<num;i++)
        {
            scanf("%d",&arr[i]);
            if(!(1<=arr[i] && arr[i]<=pow(10,7)))
            {
                printf("contstraints not met\n");
                exit(0);
            }
        }
        for(i=1;i<num;i++)
        {
            if(arr[i]>arr[i-1])
            m=arr[i];
        }
        for(i=0;i<num;i++)
        {
            if(arr[i]==m)
            count++;
        }
        printf("number of candles that can be blown out:%d",count);
}
